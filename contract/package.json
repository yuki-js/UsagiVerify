  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "format": "npx prettier --write .",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "verify": "npx hardhat ignition verify",
    "coverage": "SOLIDITY_COVERAGE=true npx hardhat coverage",
    "deploy:ERC1155WithLockModule": "npx hardhat ignition deploy ./ignition/modules/ERC1155WithLock.ts --network sepolia",
    "local": "npx hardhat node",
    "getBalance": "npx hardhat getBalance --network sepolia",
    "getChainInfo": "npx hardhat getChainInfo --network sepolia",
    "getContractAddress": "npx hardhat getContractAddress --network sepolia",
    "mint": "npx hardhat mint --network sepolia",
    "lock": "npx hardhat lock --network sepolia",
    "unlock": "npx hardhat unlock --network sepolia",
    "transfer": "npx hardhat transfer --network sepolia"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "^0.15.0",
